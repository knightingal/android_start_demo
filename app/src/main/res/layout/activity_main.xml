<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp" tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       android:id="@+id/tl_custom"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:background="@drawable/ab_transparent_green_holo"

                                       app:theme="@style/ThemeOverlay.AppCompat.ActionBar">
    </android.support.v7.widget.Toolbar>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/su27"
        android:text="@string/su27"
        android:layout_below="@+id/tl_custom"
         />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pic_index"
        android:id="@+id/picIndexBtn"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_below="@+id/su27"/>

</RelativeLayout>
