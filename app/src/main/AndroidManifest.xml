<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jianming.myapplication" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Include next permission if you want to allow UIL to cache images on SD card -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/greenicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme1" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity4List"
            android:label="@string/title_activity_list" >
        </activity>
        <activity
            android:name=".ImageActivity"
            android:label="@string/title_activity_image" >
        </activity>
        <activity
            android:name=".CrossActivity"
            android:label="@string/title_activity_cross" >
        </activity>
        <activity
            android:name=".ScreenSlidePagerActivity"
            android:label="@string/title_activity_slide_page" >
        </activity>
        <activity
            android:name=".XrxActivity"
            android:label="@string/title_activity_xrx" >
        </activity>
        <activity
            android:name=".CardFlipActivity"
            android:label="@string/title_activity_card_flip">
        </activity>
        <activity android:name=".ZoomActivity"
            android:label="@string/title_activity_zoom">
        </activity>
    </application>

</manifest>
