    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />


    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/greenicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme1" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="Local1000.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="5" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.example.jianming.beans.PicAlbumBean, com.example.jianming.beans.PicInfoBean, com.example.jianming.beans.UpdateStamp" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".PicAlbumActivity"
            android:label="@string/title_activity_list" >
        </activity>
        <activity
            android:name=".PicContentActivity"
            android:label="@string/title_activity_xrx"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
        </activity>
        <activity
            android:name=".FileTrainingActivity"
            android:label="@string/title_activity_file_training" >
        </activity>
        <activity
            android:name=".PicAlbumListActivity"
            android:label="@string/title_activity_pic_list_acivity" >
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity android:name=".AboutActivity" >
        </activity>
        <activity
            android:name=".TimestampActivity"
            android:label="@string/title_activity_timestamp"
            android:theme="@style/AppTheme1" >
        </activity>
        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme1" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.jianming.xzingdemo.CapActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>

        <service
            android:name="com.example.jianming.services.DownloadService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
